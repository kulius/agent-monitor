{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agent Monitor",
  "version": "0.1.0",
  "identifier": "com.claude.agent-monitor",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Agent Monitor",
        "width": 800,
        "height": 550,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false,
        "center": false,
        "x": 50,
        "y": 50,
        "minWidth": 500,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false,
      "title": "Agent Monitor"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
